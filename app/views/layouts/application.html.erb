<!DOCTYPE html>
<html>
  <head>
    <title>Reservester</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <nav class="navbar navbar-default navbar-fixed-top">
    <div class="container">


    </div>
  </nav>

  <p class="navbar-text pull-right">
    <% if user_signed_in? %>
        <%= link_to "Home", root_path %> |
        <%= link_to "Reservation", '#' %> |
        <%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link' %> |
        <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %> |
        Logged in as <strong><%= current_user.email %></strong>.

    <% elsif owner_signed_in? %>
        <%= link_to "Home", root_path %> |
        <%= link_to "Restaurant", restaurants_path%> |
        <%= link_to 'Edit profile', edit_owner_registration_path, :class => 'navbar-link' %> |
        <%= link_to "Logout", destroy_owner_session_path, method: :delete, :class => 'navbar-link'  %> |
        Logged in as <strong><%= current_owner.email %></strong>.

    <% else %>
        <%= link_to "Home", root_path %> |
        <%= link_to "User Login", new_user_session_path, :class => 'navbar-link'  %> |
        <%= link_to "Owner Login", new_owner_session_path, :class => 'navbar-link'  %> |

    <% end %>

  <% if notice %>
      <p class="alert alert-success"><%= notice %></p>
  <% end %>
  <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
  <% end %>
    <%= yield %>
  </body>
</html>
