

<h1>Restaurants</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Seat</th>
      <th>Cuisine</th>
      <th colspan="3"></th>

    </tr>
  </thead>

  <tbody>
    <% @restaurant.each do |restaurant| %>

      <tr>
        <% if current_owner == restaurant.owner %>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.address %></td>
        <td><%= restaurant.seat %></td>
        <td><%= restaurant.cuisine %></td>
        <td><%= link_to 'Show', restaurant %></td>
        <td><%= link_to 'Edit', edit_restaurant_path(restaurant) %></td>
        <td><%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' } %></td>

        <% elsif owner_signed_in? %>
            <td><%= restaurant.name %></td>
            <td><%= restaurant.address %></td>
            <td><%= restaurant.seat %></td>
            <td><%= restaurant.cuisine %></td>
            <td><%= link_to 'Show', restaurant %></td>

            <% elsif user_signed_in? %>
            <td><%= restaurant.name %></td>
            <td><%= restaurant.address %></td>
            <td><%= restaurant.seat %></td>
            <td><%= restaurant.cuisine %></td>
            <td><%= link_to 'Show', restaurant %></td>
            <td><%= link_to 'New Reservation', new_restaurant_reservation_path(restaurant) %></td>

            <% else %>
              root_path

        <% end %>

      </tr>

    <% end %>
  </tbody>
</table>

<br>

<% if owner_signed_in? %>
<%= link_to 'New Restaurant', new_restaurant_path %> |
<%= link_to('Logout', destroy_owner_session_path, :method => :delete) %> |
<% end %>